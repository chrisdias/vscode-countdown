{
  "name": "vscode-countdown",
  "displayName": "vscode-countdown",
  "description": "A countdown timer that shows remaining weeks/days in the status bar",
  "publisher": "chrisdias",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisdias/vscode-countdown.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "countdown.setDate",
        "title": "Countdown: Set Target Date"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --minify",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  }
}
